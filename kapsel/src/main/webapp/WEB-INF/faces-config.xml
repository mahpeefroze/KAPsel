<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="         http://xmlns.jcp.org/xml/ns/javaee         http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


	<!-- Globaly available currentDate text -->
	<managed-bean>
		<managed-bean-name>currentDate</managed-bean-name>
		<managed-bean-class>java.util.Date</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<application>
		<!-- JSF and Spring are integrated -->
		<!-- It allows SpringBeans to be used with #{notation} inside xhtml pages -->
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<!-- Localised bundles with specified language properties files -->
		<resource-bundle>
			<base-name>properties/labelsDE</base-name>
			<var>labels</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>properties/errorsDE</base-name>
			<var>errors</var>
		</resource-bundle>
	</application>


</faces-config>
