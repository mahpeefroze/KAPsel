<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="         http://xmlns.jcp.org/xml/ns/javaee         http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


	<!-- configuration of navigation rules -->
	<navigation-rule>
		<from-view-id>/registrieren.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/registrieren.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>views/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Globaly available currentDate text -->
	<managed-bean>
		<managed-bean-name>currentDate</managed-bean-name>
		<managed-bean-class>java.util.Date</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<application>
		<!-- JSF and Spring are integrated -->
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<resource-bundle>
			<base-name>properties/labels</base-name>
			<var>labels</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>properties/errors</base-name>
			<var>errors</var>
		</resource-bundle>
	</application>


</faces-config>
